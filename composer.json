{
	"name": "jweiland/pfprojects",
	"type": "typo3-cms-extension",
	"description": "This extension shows a list of all masterplan projects of Pforzheim",
	"license": "GPL-2.0-or-later",
	"keywords": ["typo3", "TYPO3 CMS", "projects"],
	"homepage": "https://jweiland.net",
	"authors": [
		{
			"name": "Stefan Froemken",
			"email": "sfroemken@jweiland.net",
			"role": "Developer"
		}
	],
	"support": {
		"email": "support@jweiland.net",
		"issues": "https://github.com/jweiland-net/pfprojects/issues",
		"source": "https://github.com/jweiland-net/pfprojects"
	},
	"require": {
		"typo3/cms-core": "^10.4.6",
		"jweiland/maps2": ">=8.0.0",
		"jweiland/service-bw2": "^4.0 || 4.*@dev"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^2.14",
		"nimut/testing-framework": "^5.1"
	},
	"autoload": {
		"psr-4": {
			"JWeiland\\Pfprojects\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"JWeiland\\Pfprojects\\Tests\\": "Tests"
		}
	},
	"config": {
		"vendor-dir": ".build/vendor"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "pfprojects",
			"app-dir": ".build",
			"web-dir": ".build/public"
		}
	},
	"scripts": {
		"php:fix": ".build/vendor/bin/php-cs-fixer --config=Build/.php_cs.php fix Classes Tests",
		"ci:php:lint": "find *.php Classes Configuration Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
		"ci:php:fixer": ".build/vendor/bin/php-cs-fixer --config=Build/.php_cs.php fix --dry-run -v --show-progress=dots --diff-format=udiff Classes Tests",
		"ci:tests:unit": ".build/vendor/bin/phpunit -c .build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit",
		"link-extension": [
			"@php -r 'is_dir($extFolder=__DIR__.\"/.build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
			"@php -r 'file_exists($extFolder=__DIR__.\"/.build/public/typo3conf/ext/pfprojects\") || symlink(__DIR__,$extFolder);'"
		],
		"post-autoload-dump": [
			"@link-extension"
		]
	}
}
